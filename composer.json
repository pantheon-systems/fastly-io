{
    "name": "pantheon-systems/fastly-io",
    "description": "WordPress plugin that utilizes Fastly's Image IO optimization service, and removes the need for additional image variants, thus reducing filesystem storage in /uploads/.",
    "type": "wordpress-plugin",
    "license": "GPL3",
    "authors": [
        {
            "name": "Ryan Hoover",
            "email": "ryan.hoover@pantheon.io"
        },
        {
            "name": "Miriam Goldman",
            "email": "miriamgoldman@pantheon.io"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^2.0",
        "pantheon-systems/pantheon-wp-coding-standards": "^2.0",
         "pantheon-systems/wpunit-helpers": "^2.0"
    },
    "scripts": {
        "test-init": "bin/install-wp-tests.sh wordpress_tests root \"\"",
        "test": "phpunit",
        "lint": [
        "@phpcs",
        "@jshint"
        ],
        "jshint": "npm run lint:js",
        "phpcs": "vendor/bin/phpcs -s .",
        "phpcbf": "vendor/bin/phpcbf",
        "phpunit": "vendor/bin/phpunit"
    },
    "autoload": {
        "psr-4": {
            "Fastly_IO\\": "src/classes/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pantheon-systems/wpunit-helpers": true
        }
    }
}
